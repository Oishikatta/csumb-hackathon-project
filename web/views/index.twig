{% include "header.twig" %}
<h3>Your Character</h3>
<h4>(Use this randomly generated character or choose your own)</h4>
<form action="/start" method="post" id="userForm">
<fieldset id="inputFields">
<div class="form-group">
	<label for="name">Character Name</label>
	<input id="name" name="name" type="text" placeholder="{{ user.name }}" class="form-control">
</div>
<div class="form-group">
	<label for="gender">Character Gender</label>
	<select id="gender" name="gender" class="form-control">
		<option value="Female" {% if user.gender == "Female" %}selected{% endif %}>Female</option>
		<option value="Male" {% if user.gender== "Male" %}selected{% endif %}>Male</option>
	</select>
</div>
