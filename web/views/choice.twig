{% include "header.twig" %}
<h3>Make a choice</h3>
{% include "nodes/" ~ tree.template %}
{% if tree.children is defined %}
{% for node in tree.children %}
	<a class="btn btn-primary" href="/play/{{ node.id }}">{{ node.name }}</a>
{% endfor %}
{% else %}
<h3>You've reached the end of the game.</h3>
{% endif %}
{% if tree.id is not same as(0) %}
<div class="row">
<a class="btn btn-default" id="back">Go Back</a>
</div>
<script>
$("a#back").click(function(){
	parent.history.back();
	return false;
});
</script>
{% endif %}
{% include "footer.twig" %}
